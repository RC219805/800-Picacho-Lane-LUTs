    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Debug Python Script",
            "program": "${input:pythonScript}",
            "console": "integratedTerminal",
            "args": []
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "pythonScript",
            "description": "Select Python script to debug",
            "options": [
                "${workspaceFolder}/lux_render_pipeline.py",
                "${workspaceFolder}/luxury_tiff_batch_processor.py",
                "${workspaceFolder}/luxury_video_master_grader.py"
            ]
        }
    ]
}